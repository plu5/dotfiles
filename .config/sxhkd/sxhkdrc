# check sink with wpctl status
XF86AudioLowerVolume
	wpctl set-volume $(wpctl status | sed -En 's/│[\* ]+ ([0-9]+)\. CM108 Audio Controller Analog Stereo.+*/\1/p') 5%-
# amixer sset -q Capture,0 5%-
XF86AudioRaiseVolume
	wpctl set-volume $(wpctl status | sed -En 's/│[\* ]+ ([0-9]+)\. CM108 Audio Controller Analog Stereo.+*/\1/p') 5%+
# XF86AudioMute
#         xset dpms force off
hyper + numbersign
	amixer sset -q Master,0 toggle

hyper + bracketright
	sommeil & xset dpms force off; pausepp kill

ctrl + Escape
	sysmontask

hyper + minus
	warpd --normal
hyper + 0
	warpd --hint
hyper + m
	xdotool sleep 0.2 click 1
hyper + comma
	xdotool sleep 0.2 click 2
hyper + period
	xdotool sleep 0.2 click 3
# ^ alternatively use shift f10 to right click
hyper + k
	xdotool mousemove_relative -- -10 0
hyper + semicolon
	xdotool mousemove_relative -- 10 0
hyper + o
	xdotool mousemove_relative -- 0 -10
hyper + l
	xdotool mousemove_relative -- 0 10
hyper + bracketleft
	xdotool sleep 0.2 click 4
hyper + apostrophe
	xdotool sleep 0.2 click 5
