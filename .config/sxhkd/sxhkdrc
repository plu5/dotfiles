# terminal emulator [but you should launch one from emacs instead]
super + Return
	urxvt

# explorer
super + e
	urxvt -e ranger

# emacs
super + shift + e
	/usr/bin/emacsclient --create-frame

# program launcher
super + space
	profi

# calculator and currency converter
super + alt + space
	  rofi -show calc -modi calc -no-show-match -no-sort -calc-command "echo -n '\{result\}' | xclip -selection clipboard"

# file browser
super + alt + shift + space
	rofi -show filebrowser

# open windows switcher
super + alt + shift + w
	rofi -show window

# pm: fsearch, kind of like Everything on windows
super + f
	fsearch

# set selected window width to a width that fits emacs 80 columns with my config. but doesn't work, haven't got the right command yet
# bspc node -z right 20 0
super + shift + alt + p
	bspc node -z left 1000 0
        bspc node -z right 2000 0

