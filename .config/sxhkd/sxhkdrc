	old=$(xsel -o --clipboard); echo -n "$(date +"[%H:%M] ")" | xclip -selection clipboard; sleep 0.1; xdotool key --window $(xdotool getactivewindow) --clearmodifiers XF86Paste; sleep 0.1; echo -n "$old" | xclip -selection clipboard

